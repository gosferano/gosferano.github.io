---
interface Props {
  title: string;
  description: string;
  link: string;
  tags?: string[];
}

const { title, description, link, tags = [] } = Astro.props;
---

<article
  class="rounded-xl border border-zinc-200 bg-white p-8 transition-all duration-200 hover:-translate-y-1 hover:border-blue-500 dark:border-zinc-800 dark:bg-zinc-900 dark:hover:border-blue-500"
>
  <h3 class="mb-3 text-2xl font-semibold text-zinc-900 dark:text-zinc-100">{title}</h3>
  <p class="mb-4 leading-relaxed text-zinc-600 dark:text-zinc-400">{description}</p>
  {
    tags.length > 0 && (
      <div class="mb-4 flex flex-wrap gap-2">
        {tags.map((tag) => (
          <span class="rounded-md border border-blue-200 bg-blue-50 px-3 py-1 text-sm text-blue-600 dark:border-blue-500/20 dark:bg-blue-500/10 dark:text-blue-400">
            {tag}
          </span>
        ))}
      </div>
    )
  }
  <a
    href={link}
    class="mt-2 inline-flex items-center font-medium text-blue-600 hover:text-blue-700 hover:underline dark:text-blue-400 dark:hover:text-blue-300"
    target="_blank"
    rel="noopener noreferrer"
  >
    View Project â†’
  </a>
</article>
